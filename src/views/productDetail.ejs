    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/footer.css">
    
</head>
<body>
    <%- include("./partials/headerMain") %>
    <main>
    <%- include("./partials/headerNavBar") %>
    <div class="product-container">
        <h3>Nombre : <%= Product.nombre %> </h3>
        <h4>Talla : <%=Product.sizes.talla%> </h4>
        <img src="/images/store/<%=Product.imagen%>">
        <p> $<%= (Product.precio) %></p>
        <p><%= (Product.descripcion) %></p>
        <button class="button-buy">Comprar</button>
        <a href="/edit/<%= Product.id %> ">
        <button class="button-buy">editar</button>
        </a>
        <form action="/delete/<%= Product.id %> " method="POST">
            <button type="submit" class="button-buy">borrar</button>
            </form>
    </div> 
    
    </main>
    <%- include("./partials/footer")%>
